{{- $.Scratch.Set "content" slice -}}
{{- range .Site.Pages -}}
  {{- if and (not (hasPrefix .RelPermalink "/search/")) (not (hasPrefix .RelPermalink "/highlights/")) -}}
    {{- $tags := .Params.tags | default slice -}}
    {{- $summary := .Params.summary | default "" -}}
    {{- $.Scratch.Add "content"
      (dict
        "title" .Title 
        "summary" $summary 
        "permalink" .Permalink 
        "tags" $tags
      ) -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "content" | jsonify -}}
